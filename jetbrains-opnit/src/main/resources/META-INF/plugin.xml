<idea-plugin>
    <id>org.opnit.plugin</id>
    <name>Opnit Language Support</name>
    <vendor email="support@opnit.org" url="http://www.opnit.org">Opnit</vendor>

    <description><![CDATA[
        Provides support for the Opnit programming language.<br>
        Features include:
        <ul>
            <li>Syntax highlighting</li>
            <li>Code formatting</li>
            <li>Basic error detection</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Opnit File"
                implementationClass="org.opnit.plugin.OpnitFileType"
                fieldName="INSTANCE"
                language="Opnit"
                extensions="opnit"/>
        <lang.syntaxHighlighterFactory
                language="Opnit"
                implementationClass="org.opnit.plugin.OpnitSyntaxHighlighterFactory"/>
    </extensions>
</idea-plugin> 